{
  "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "incremental": true,
      "rootDir": "./",
      "baseUrl": "./",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
        },
      "typeRoots": [
          "./src/types",
          "./node_modules/@types"
      ],
      "allowJs": true,
      "sourceMap": true,
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "useUnknownInCatchVariables": false,
      "strict": true,
      "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}